<UserControl x:Class="GCodeConvertor.InstrumentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GCodeConvertor"
             mc:Ignorable="d" Grid.Column="0">
    <StackPanel x:Name="panelInstrument" Background="LightYellow" Width="100" Height="50">
        <Label Name="labelInstrument" Content="{Binding elementName}" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
